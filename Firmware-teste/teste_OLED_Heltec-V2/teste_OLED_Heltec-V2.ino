void oledReset() {
  pinMode(OLED_RESET, OUTPUT);
  digitalWrite(OLED_RESET, LOW);
  delay(10);
  digitalWrite(OLED_RESET, HIGH);
  delay(10);
}

void setup() {
  Serial.begin(115200);
  while (!Serial);

  Wire.begin(4, 15);
  oledReset();

  if (!display.begin(SSD1306_SWITCHCAPVCC, OLED_ADDR)) {
    Serial.println("Falha ao iniciar OLED");
    for (;;);
  }

  display.clearDisplay();
  
  // Desenha a imagem no centro
  display.drawBitmap(
    (128 - LOGO_WIDTH) / 2,  // x centralizado
    (64 - LOGO_HEIGHT) / 2,  // y centralizado
    logo_bits,
    LOGO_WIDTH,
    LOGO_HEIGHT,
    SSD1306_WHITE
  );

  display.display();
}

